{% extends "base.html.twig" %}
{% block title %}read_book{% endblock %}

{% block body %}
    <article class="content">
    {# {{ dump(_context) }} #}
        <h1>Books</h1>
        <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Image-URL</th>
            <th>Manage</th>
        </tr>
        {% for book in books%}
            <tr>
              <td><a href="{{url("view_single_book", 
              {id: book.id }) }}">{{book.title}}</a></td>
              <td>{{book.forfattare}}</td>
              <td>{{book.ISBN}}</td>
              <td><a href="{{book.image}}">View Image</a></td>
              <td>
                <a href="{{url("book_update", {id: book.id }) }}">Edit</a><br>
                <a href="{{url("book_delete_by_id", {id: book.id }) }}">Delete</a>
              </td>
            </tr>
        {% endfor %}
        </table>
    </article>
{% endblock %}