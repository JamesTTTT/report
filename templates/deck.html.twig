        <h1>Deck</h1>
        {{ dump(_context) }}
        <div class ="deck-body">
            {% for card in deck.deck %}
            <div class="card-container">
                {{card.getDetails()[1]}}
                {{card.getDetails()[2]}}
            </div>
            {% endfor %}
        </div>
    </article>
{% endblock %}